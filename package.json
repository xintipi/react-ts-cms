{
  "name": "react-ts-cms",
  "version": "0.0.0",
  "description": "A React js project",
  "author": "Nguyễn Hữu Trung <huutrung.mmt@gmail.com>",
  "license": "MIT",
  "scripts": {
    "dev": "vite --host",
    "build:development": "tsc && vite build --mode development",
    "build:staging": "tsc && vite build --mode staging",
    "build:production": "tsc && vite build",
    "preview": "vite preview --port 5000",
    "lint:fix": "eeslint --cache --max-warnings 0  \"{src}/**/*.{js,jsx,ts,tsx}\" --fix",
    "lint:format": " prettier --write  \"src/**/*.{js,jsx,ts,tsx,css,scss,md,json}\"",
    "lint": "npm run lint:format && npm run lint:fix",
    "postinstall": "husky install",
    "pre-commit": "npm run lint"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^1.8.3",
    "axios": "^0.27.2",
    "clsx": "^1.2.1",
    "lodash-es": "^4.17.21",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-redux": "^8.0.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@types/lodash-es": "^4.17.6",
    "@types/react": "^18.0.15",
    "@types/react-dom": "^18.0.6",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "@vitejs/plugin-react": "^2.0.0",
    "eslint": "^8.20.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.6.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.30.1",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "husky": "^8.0.1",
    "prettier": "^2.7.1",
    "sass": "^1.54.0",
    "typescript": "^4.6.4",
    "vite": "^3.0.0"
  }
}
